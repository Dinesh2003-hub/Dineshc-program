#include <iostream>
#include <cctype>
#include <string>
using namespace std;

int main() 
{
  char str[100];
  cout << "Enter a string: ";
  cin.getline(str, 100); // Safely read input into str
  
  int count = 0;
  for(int i = 0; str[i] != '\0'; i++)  // Loop until the end of string ('\0' character)
  {
    if(str[i] >= 'A' && str[i] <= 'Z')
    {
      count++;
    }
  }
  cout << "Total uppercase letters in the string: " << count << endl;
  
  for(char &c : str) 
  {
    c = toupper(c);  // Convert each character to uppercase
  }
  cout << "Uppercase string: " << str << endl;
  
  for(char &c : str)
  {
    c = tolower(c);  // Convert each character back to lowercase
  }
  cout << "Lowercase string: " << str << endl;
  
  return 0;
}
